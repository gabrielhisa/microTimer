<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPane" centerShape="false" onMouseDragged="#handleMouseDragged"
            onMousePressed="#handleMousePressed" prefHeight="42.0" prefWidth="234.0"
            scaleShape="false" style="-fx-background-color: #2c2c2c; -fx-border-color: #666666; -fx-border-width: 1;
             -fx-border-radius: 0; -fx-border-radius: 10;"
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.microtimer.MicroTimerController" >

    <!-- Timer Display -->
    <HBox alignment="CENTER" layoutX="6.0" layoutY="3.0" spacing="2">
        <Label fx:id="hourLabel" style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text="00">
            <font><Font name="System" size="24" /></font>
        </Label>
        <Label style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text=":">
            <font><Font name="System" size="24" /></font>
        </Label>
        <Label fx:id="minuteLabel" style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text="00">
            <font>
            <Font name="System" size="24" />
         </font>
        </Label>
        <Label style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text=":">
            <font><Font name="System" size="24" /></font>
        </Label>
        <Label fx:id="secondLabel" style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text="00">
            <font><Font name="System" size="24" /></font>
        </Label>
        <Label style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text=":">
            <font><Font name="System" size="24" /></font>
        </Label>
        <Label fx:id="milliLabel" style="-fx-text-fill: #FFD700; -fx-font-weight: bold;" text="00">
            <font><Font name="System" size="24" /></font>
        </Label>
    </HBox>

    <!-- Control Buttons -->
    <HBox alignment="CENTER" layoutX="159.0" layoutY="8.0" spacing="5.0">
        <Button fx:id="startPauseButton" onAction="#startTimer" prefHeight="25.0" prefWidth="28.0" text="▶" />
        <Button fx:id="resetButton" onAction="#resetTimer" prefHeight="25.0" prefWidth="28.0" text="■" />
    </HBox>
</AnchorPane>
